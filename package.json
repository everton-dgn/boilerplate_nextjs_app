{
  "name": "boilerplate_nextjs_app",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "author": "Ã‰verton Toffanetto",
  "description": "This application is a boilerplate for complex and large systems, especially those that need to scale with security and code quality.",
  "repository": "https://github.com/everton-dgn/boilerplate_nextjs_app",
  "scripts": {
    "dev": "next dev",
    "start": "next start",
    "build": "next build",
    "lint": "eslint --cache src --ext ts,tsx,json --max-warnings=0",
    "lint:fix": "eslint --cache --fix src --ext ts,tsx,json",
    "lint:css": "stylelint --cache 'src/**/*.scss'",
    "lint:css:fix": "stylelint --cache 'src/**/*.scss' --fix",
    "next:lint": "next lint",
    "format": "prettier --cache --write .",
    "check:format": "prettier --cache --check .",
    "typecheck": "tsc --noEmit",
    "test": "jest --maxWorkers=50%",
    "test:c": "jest --maxWorkers=50% --coverage",
    "test:w": "jest --watch --maxWorkers=25%",
    "test:ci": "jest --runInBand",
    "check:update": "yarn upgrade-interactive --latest",
    "storybook": "storybook dev -p 6006",
    "build:storybook": "storybook build",
    "generate": "yarn plop --plopfile generator/plopFile.mjs",
    "prepare": "node scripts/create-husky-files.mjs && husky install"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true",
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "clsx": "^2.0.0",
    "next": "^13.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@storybook/addon-a11y": "^7.4.5",
    "@storybook/addon-essentials": "^7.4.5",
    "@storybook/addon-links": "^7.4.5",
    "@storybook/blocks": "^7.4.5",
    "@storybook/nextjs": "^7.4.5",
    "@storybook/react": "^7.4.5",
    "@swc/core": "^1.3.91",
    "@swc/jest": "^0.2.29",
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.24",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "eslint-config-next": "^13.5.3",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.0",
    "eslint-import-resolver-typescript": "3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.4.2",
    "eslint-plugin-jest-dom": "^4.0.3",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-n": "16.0.2",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-sonarjs": "^0.21.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-storybook": "^0.6.14",
    "eslint-plugin-testing-library": "^5.11.1",
    "eslint-plugin-typescript-sort-keys": "^2.3.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^14.0.1",
    "plop": "^4.0.0",
    "prettier": "^3.0.3",
    "sass": "^1.68.0",
    "sharp": "^0.32.6",
    "storybook": "^7.4.5",
    "stylelint": "^15.10.3",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-sass-guidelines": "^10.0.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "stylelint-high-performance-animation": "^1.9.0",
    "stylelint-sass-render-errors": "^3.2.0",
    "stylelint-selector-no-empty": "^1.0.9",
    "typescript": "^5.2.2"
  }
}
