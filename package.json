{
  "name": "boilerplate_nextjs_app",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "author": "Ã‰verton Toffanetto",
  "description": "This application is a boilerplate for complex and large systems, especially those that need to scale with security and code quality.",
  "repository": "https://github.com/everton-dgn/boilerplate_nextjs_app",
  "scripts": {
    "dev": "next dev --turbopack",
    "start": "next start",
    "build": "next build --turbopack",
    "lint": "biome check ./src",
    "format": "biome check --write ./src",
    "biome:ci": "biome ci ./src --no-errors-on-unmatched --files-ignore-unknown=true",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:c": "vitest run --coverage",
    "test:w": "vitest",
    "test:ui": "vitest --ui --coverage.enabled=true",
    "test:ci": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:codegen": "playwright codegen http://localhost:3000",
    "check:update": "pnpm update --interactive --latest",
    "update:pnpm": "corepack use pnpm@latest",
    "detect:duplicates": "pnpx jscpd ./src/**/*.ts",
    "postinstall": "pnpx lefthook install"
  },
  "engines": {
    "node": ">=22"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "@swc/core",
      "esbuild",
      "lefthook",
      "sharp"
    ]
  },
  "packageManager": "pnpm@10.8.0+sha512.0e82714d1b5b43c74610193cb20734897c1d00de89d0e18420aebc5977fa13d780a9cb05734624e81ebd81cc876cd464794850641c48b9544326b5622ca29971",
  "dependencies": {
    "clsx": "2.1.1",
    "next": "15.3.0",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@playwright/test": "1.51.1",
    "@semantic-release/commit-analyzer": "13.0.1",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "11.0.1",
    "@semantic-release/npm": "12.0.1",
    "@svgr/webpack": "8.1.0",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/jsdom-global": "3.0.7",
    "@types/node": "22.14.0",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.2",
    "@vitejs/plugin-react-swc": "3.8.1",
    "@vitest/coverage-v8": "3.1.1",
    "@vitest/ui": "3.1.1",
    "autoprefixer": "10.4.21",
    "cssnano": "7.0.6",
    "dotenv": "16.4.7",
    "jsdom": "26.0.0",
    "jsdom-global": "3.0.2",
    "lefthook": "1.11.8",
    "postcss": "8.5.3",
    "postcss-import": "16.1.0",
    "postcss-preset-env": "10.1.5",
    "semantic-release": "24.2.3",
    "typescript": "5.8.3",
    "vite": "6.2.5",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.1.1"
  }
}
